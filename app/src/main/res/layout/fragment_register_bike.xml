<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/activity_horizontal_margin">

    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="wrap_content">

        <LinearLayout android:id="@+id/photo_section"
                      android:layout_height="wrap_content"
                      android:layout_width="match_parent"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintLeft_toLeftOf="parent"
                      app:layout_constraintRight_toRightOf="parent"
                      android:orientation="vertical">

            <TextView android:text="@string/label_photo_register_bike"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      style="@style/InputLabelStyle"/>

            <ImageButton android:id="@+id/bike_photo_button"
                         app:srcCompat="@drawable/ic_camera"
                         android:layout_width="150dp"
                         android:layout_height="150dp"
                         android:layout_marginTop="8dp"
                         android:background="@drawable/default_border"
                         tools:ignore="ContentDescription"/>
        </LinearLayout>


        <LinearLayout android:id="@+id/lock_section"
                      android:layout_height="wrap_content"
                      android:layout_width="match_parent"
                      android:layout_marginTop="16dp"
                      app:layout_constraintTop_toBottomOf="@+id/photo_section"
                      app:layout_constraintLeft_toLeftOf="parent"
                      app:layout_constraintRight_toRightOf="parent"
                      android:orientation="vertical">

            <TextView android:text="@string/label_lock_id_register_bike"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      style="@style/InputLabelStyle"/>

            <Button android:id="@+id/register_lock_id_button"
                    android:text="@string/button_register_lock_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_bluetooth"
                    android:drawablePadding="@dimen/button_icon_padding"
                    android:layout_marginTop="8dp"/>

            <TextView android:id="@+id/lock_id_text"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="8dp"
                      android:visibility="gone"/>
        </LinearLayout>


        <LinearLayout android:id="@+id/type_section"
                      android:orientation="vertical"
                      android:layout_height="wrap_content"
                      android:layout_width="match_parent"
                      app:layout_constraintTop_toBottomOf="@+id/lock_section"
                      app:layout_constraintLeft_toLeftOf="parent"
                      app:layout_constraintRight_toRightOf="parent"
                      android:layout_marginTop="16dp">

            <TextView android:text="@string/label_type_register_bike"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      style="@style/InputLabelStyle"/>

            <Spinner android:id="@+id/bike_type_spinner"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="8dp"/>

            <TextView android:id="@+id/bike_type_empty_view"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="8dp"
                      android:text="@string/empty_bike_type_view_text"/>
        </LinearLayout>


        <LinearLayout android:id="@+id/price_section"
                      android:layout_height="wrap_content"
                      android:layout_width="match_parent"
                      app:layout_constraintTop_toBottomOf="@+id/type_section"
                      app:layout_constraintLeft_toLeftOf="parent"
                      app:layout_constraintRight_toRightOf="parent"
                      android:layout_marginTop="16dp"
                      android:orientation="vertical">

            <TextView android:text="@string/label_price_register_bike"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      style="@style/InputLabelStyle"/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">

                <TextView android:text="@string/currency_label"
                          android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:gravity="center"
                          android:textSize="20sp"
                          android:paddingTop="8dp"/>

                <EditText android:id="@+id/price_input"
                          android:layout_width="100dp"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="8dp"
                          android:inputType="number"
                          tools:ignore="Autofill,LabelFor"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</ScrollView>